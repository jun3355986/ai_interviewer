{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: FastAPI (调试模式)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--log-level",
                "debug"
            ],
            "jinja": true,
            "justMyCode": false,
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: 调试脚本",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run_debug.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONUNBUFFERED": "1"
            }
        }
    ]
}

